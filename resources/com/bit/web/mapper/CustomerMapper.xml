<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">



<mapper namespace="com.bit.web.mapper.CustomerMapper">
   <resultMap id = "customerMap" type="com.bit.web.domain.CustomerDTO">
   <id property="customerId" column = "CUSTOMER_ID"/>
   <result property = "customerName" column="CUSTOMER_NAME"/>
   <result property = "password" column="PASSWORD"/>
   <result property = "SSN" column="ssn"/>
   <result property = "PHONE" column="phone"/>
   <result property = "CITY" column="city"/>
   <result property = "ADDRESS" column="address"/>
   <result property = "POSTALCODE" column="postalcode"/>
   <result property = "PHOTO" column="photo"/>
</resultMap>


   <insert id="insertCustomer" parameterType="com.bit.web.domain.CustomerDTO">
       insert into CUSTOMERS (CUSTOMER_ID, CUSTOMER_NAME, PASSWORD, SSN, PHONE, CITY, ADDRESS, POSTALCODE, PHOTO)
       values (#{customerId},#{customerName},#{password},#{ssn},#{phone},#{city},#{address},#{postalcode},#{photo})
   </insert>

   <select id="selectCustomers" resultMap="customerMap">
       select * from CUSTOMERS
   </select>

   <select id="selectCustomersByOption" resultMap="customerMap" parameterType="com.bit.web.domain.CustomerDTO">
     select * from CUSTOMERS where CUSTOMER_NAME = #{customerName}
   </select>

   <select id="selectCustomerBycustomerId" resultMap="customerMap" parameterType="string">
       select * from CUSTOMERS where CUSTOMER_ID = #{value}
   </select>

   <select id="selectCount" resultType="int">
       select count(*) as count from CUSTOMERS
   </select>

   <update id="updateCustomer" parameterType="com.bit.web.domain.CustomerDTO">
       update CUSTOMERS set
       CUSTOMER_NAME = #{customerName},
       PASSWORD = #{password}
       SSN = #{ssn}
       PHONE = #{phone}
       CITY = #{city}
       ADDRESS = #{address}
       POSTALCODE = #{postalcode}
       PHOTO = #{photo}
       where CUSTOMER_ID = #{customerId}
   </update>

   <delete id="deleteCustomer" parameterType="com.bit.web.domain.CustomerDTO">
       delete from CUSTOMERS where CUSTOMER_ID = #{customerId}
   </delete>

</mapper>