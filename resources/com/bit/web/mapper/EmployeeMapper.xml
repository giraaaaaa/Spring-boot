<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.bit.web.mapper.EmployeeMapper">
        


<insert id="addEmployee"  parameterType="import com.bit.web.domain.EmployeeDTO">
        insert into EMPLOYESS (EMPLOYEE_ID, MANAGER, NAME, BIRTH_DATE, PHOTO, NOTES)
        values (#{employeeId},#{manager},#{name},#{birthDate},#{photo},#{notes}) 
     </insert> 
     <!-- #쪽은 자바를 따름 -->
   <select id="selectEmployee" resultType="import com.bit.web.domain.EmployeeDTO">
    select * from Blog EMPLOYESS
  </select>
  <select id="selectEmployeeByOption" resultType="import com.bit.web.domain.EmployeeDTO"
                                        parameterType="import com.bit.web.domain.EmployeeDTO">
    select * from Blog EMPLOYESS where MANAGER = #{manager}
  </select>
  <select id="selectEmployeeByEmployeeId" resultType="import com.bit.web.domain.EmployeeDTO"
                                        parameterType="string">
    select * from Blog EMPLOYESS where EMPLOYEE_ID = #{value}
  </select>
<update  id="updateEmployee"  parameterType="import com.bit.web.domain.EmployeeDTO">
            update Author set
            MANAGER = #{manager},
            NAME = #{name},
            BIRTH_DATE = #{birthDate},
            PHOTO = #{photo},
            NOTES = #{notes},
            where EMPLOYEE_ID = #{employeeId}
        </update>



          
<delete  id="deleteEmployee"  parameterType="import com.bit.web.domain.EmployeeDTO">  
    delete from EMPLOYESS where EMPLOYEE_ID = #{employeeId}
</delete>
  
</mapper>
